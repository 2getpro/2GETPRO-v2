# Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=2getpro_v2
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Panel API
PANEL_API_URL=https://your-panel-api.com
PANEL_API_KEY=your_panel_api_key_here

# Payment Systems
# YooKassa
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# CryptoPay
CRYPTOPAY_TOKEN=your_cryptopay_token

# FreeKassa
FREEKASSA_MERCHANT_ID=your_merchant_id
FREEKASSA_SECRET_KEY_1=your_secret_key_1
FREEKASSA_SECRET_KEY_2=your_secret_key_2

# Monitoring
# Sentry
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# Prometheus
PROMETHEUS_PORT=9090

# Security
# JWT Secret for webhook validation
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_WINDOW_SECONDS=60

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Features
REFERRAL_ENABLED=true
TRIAL_ENABLED=true
PROMO_CODES_ENABLED=true

# Channels (comma-separated)
REQUIRED_CHANNELS=-1001234567890,-1009876543210

# Localization
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en