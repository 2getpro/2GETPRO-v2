# ============================================
# Обязательные параметры бота
# ============================================
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# ============================================
# База данных PostgreSQL
# ============================================
# Имя БД должно совпадать с POSTGRES_DB
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vpn_shop_db
POSTGRES_USER=user
POSTGRES_PASSWORD=your_password_here

# ============================================
# Redis Cache (опционально)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# ============================================
# Panel API
# ============================================
PANEL_API_URL=https://your-panel-api.com
PANEL_API_KEY=your_panel_api_key_here

# ============================================
# Платёжные системы
# ============================================

# YooKassa (рекомендуется)
YOOKASSA_ENABLED=true
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_RETURN_URL=https://your-domain.com
YOOKASSA_AUTOPAYMENTS_ENABLED=false

# CryptoPay (опционально)
CRYPTOPAY_ENABLED=true
CRYPTOPAY_TOKEN=your_cryptopay_token
CRYPTOPAY_NETWORK=mainnet
CRYPTOPAY_CURRENCY_TYPE=fiat
CRYPTOPAY_ASSET=RUB

# FreeKassa (опционально - можно оставить пустыми)
FREEKASSA_ENABLED=false
FREEKASSA_MERCHANT_ID=
FREEKASSA_FIRST_SECRET=
FREEKASSA_SECOND_SECRET=
FREEKASSA_API_KEY=
FREEKASSA_PAYMENT_METHOD_ID=
FREEKASSA_PAYMENT_IP=

# Telegram Stars (встроенная система)
STARS_ENABLED=true

# Tribute (опционально)
TRIBUTE_ENABLED=false
TRIBUTE_LINK_1_MONTH=
TRIBUTE_LINK_3_MONTHS=
TRIBUTE_LINK_6_MONTHS=
TRIBUTE_LINK_12_MONTHS=
TRIBUTE_API_KEY=

# ============================================
# Цены на подписки (в рублях)
# ============================================
1_MONTH_ENABLED=true
3_MONTHS_ENABLED=true
6_MONTHS_ENABLED=true
12_MONTHS_ENABLED=true

RUB_PRICE_1_MONTH=199
RUB_PRICE_3_MONTHS=499
RUB_PRICE_6_MONTHS=899
RUB_PRICE_12_MONTHS=1499

# Цены в Telegram Stars (опционально)
STARS_PRICE_1_MONTH=
STARS_PRICE_3_MONTHS=
STARS_PRICE_6_MONTHS=
STARS_PRICE_12_MONTHS=

# ============================================
# Мониторинг (опционально)
# ============================================
# Sentry
SENTRY_DSN=
SENTRY_ENABLED=false
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================
# Безопасность
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

WEBHOOK_VALIDATION_ENABLED=true
WEBHOOK_SECRET_TOKEN=your_webhook_secret_here
WEBHOOK_BASE_URL=https://your-domain.com

# ============================================
# Логирование в Telegram (опционально)
# ============================================
LOG_CHAT_ID=
LOG_THREAD_ID=
LOG_NEW_USERS=true
LOG_PAYMENTS=true
LOG_PROMO_ACTIVATIONS=true
LOG_TRIAL_ACTIVATIONS=true
LOG_SUSPICIOUS_ACTIVITY=true

# ============================================
# Функции бота
# ============================================
# Триал-период
TRIAL_ENABLED=true
TRIAL_DURATION_DAYS=3
TRIAL_TRAFFIC_LIMIT_GB=5.0

# Реферальная программа
REFERRAL_ONE_BONUS_PER_REFEREE=true
LEGACY_REFS=true
REFERRAL_BONUS_DAYS_1_MONTH=3
REFERRAL_BONUS_DAYS_3_MONTHS=7
REFERRAL_BONUS_DAYS_6_MONTHS=15
REFERRAL_BONUS_DAYS_12_MONTHS=30

# Обязательная подписка на канал (опционально)
REQUIRED_CHANNEL_ID=
REQUIRED_CHANNEL_LINK=

# Уведомления о подписках
SUBSCRIPTION_NOTIFICATIONS_ENABLED=true
SUBSCRIPTION_NOTIFY_ON_EXPIRE=true
SUBSCRIPTION_NOTIFY_AFTER_EXPIRE=true
SUBSCRIPTION_NOTIFY_DAYS_BEFORE=3

# ============================================
# Дополнительно
# ============================================
DEFAULT_LANGUAGE=ru
DEFAULT_CURRENCY_SYMBOL=RUB
SUPPORT_LINK=
SERVER_STATUS_URL=
TERMS_OF_SERVICE_URL=

# Настройки трафика
USER_TRAFFIC_LIMIT_GB=0.0
USER_TRAFFIC_STRATEGY=NO_RESET

# Веб-сервер (для вебхуков)
WEB_SERVER_HOST=0.0.0.0
WEB_SERVER_PORT=8080